extends ../layouts/empty
include components/colorswatch/colorswatch

block title 
    title UI Kit
    meta(name="keywords" content="uikit ")
    meta(name="description" content="content")
    link(rel="stylesheet", href=require("../ui-addition.scss"))

block main 
    .container
        div
            div
                +colorswatch("dark-shade-100", "Dark Shade 100%", "#1F2041")
                +colorswatch("dark-shade-75", "Dark Shade 75%", "#1F2041")
                +colorswatch("dark-shade-50", "Dark Shade 50%", "#1F2041")
                +colorswatch("dark-shade-25", "Dark Shade 25%", "#1F2041")
                +colorswatch("dark-shade-5", "Dark Shade 5%", "#1F2041")
                +colorswatch("primary", "Purple", "#BC9CFF")
                +colorswatch("secondary", "Green", "#6FCF97")
            
            div 
                h1 This one is the sub-section or widget title
                h2 Next one is the item title inside widgets
                h3 This is a label or CTA text
                p This is the body text which is used for most of the design, like paragraphs, lists, etc.